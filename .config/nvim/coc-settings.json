{
    "languageserver": {
        "bash": {
            "args": [
                "start"
            ],
            "command": "bash-language-server",
            "filetypes": [
                "sh"
            ],
            "ignoredRootPaths": [
                "~"
            ]
        },
        "dockerfile": {
            "args": [
                "--stdio"
            ],
            "command": "docker-langserver",
            "filetypes": [
                "dockerfile"
            ]
        },
        "efm": {
            "args": [],
            "command": "efm-langserver",
            "filetypes": [
                "vim",
                "eruby",
                "markdown"
            ]
        },
        "golang": {
            "command": "gopls",
            "filetypes": [
                "go"
            ],
            "rootPatterns": [
                "go.mod",
                ".vim/",
                ".git/",
                ".hg/"
            ]
        }
    },
    "suggest.acceptSuggestionOnCommitCharacter": true,
    "suggest.minTriggerInputLength": 2,
    "suggest.noselect": false,
    "suggest.snippetIndicator": "\u25ba",
    "suggest.timeout": 500,
    "suggest.triggerAfterInsertEnter": true
}
