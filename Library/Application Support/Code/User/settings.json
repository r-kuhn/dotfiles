{
  "editor.fontFamily": "OperatorMonoLig Nerd Font",
  "editor.fontLigatures": true,
  "workbench.colorTheme": "Monokai Pro",
  "workbench.iconTheme": "Monokai Pro Icons",
  "bracket-pair-colorizer-2.showBracketsInGutter": true,
  "bracket-pair-colorizer-2.showBracketsInRuler": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": true
  },
  "editor.cursorBlinking": "smooth",
  // Operator Mono Font Settings:
  "editor.fontFamily": "OperatorMonoLig Nerd Font",
  "editor.fontSize": 14,
  "terminal.integrated.fontFamily": "OperatorMonoLig Nerd Font",
  "terminal.integrated.fontSize": 13,
  "editor.fontLigatures": true,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.minimap.enabled": false,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "git.autofetch": true,
  "gitlens.advanced.telemetry.enabled": false,
  "[html]": {
    "editor.formatOnSave": false
  },
  "go.buildOnSave": "off",
  "go.vetOnSave": "off",
  "go.useLanguageServer": true,
  "go.formatTool": "goimports",
  "go.autocompleteUnimportedPackages": true,
  "go.languageServerExperimentalFeatures": {
    "format": true,
    "autoComplete": true,
    "diagnostics": true,
    "goToDefinition": true,
    "hover": true,
    "signatureHelp": true,
    "goToTypeDefinition": true,
    "documentSymbols": true
  },
  "go.lintTool": "golangci-lint",
  "[go]": {
    "editor.snippetSuggestions": "none",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    }
  },
  "gopls": {
    "usePlaceholders": true, // add parameter placeholders when completing a function
    // Experimental settings
    "completeUnimported": true, // autocomplete unimported packages
    "watchFileChanges": true, // watch file changes outside of the editor
    "deepCompletion": true, // enable deep completion
  },
  "telemetry.enableCrashReporter": false,
  "telemetry.enableTelemetry": false,
  "workbench.fontAliasing": "antialiased",
  "window.zoomLevel": 0,
  "emmet.includeLanguages": {
    "erb": "erb",
    "html": "html"
  },
  "workbench.iconTheme": "Monokai Pro (Filter Ristretto) Icons",
  "extensions.ignoreRecommendations": false,
  "breadcrumbs.enabled": false,
  "workbench.colorTheme": "Iceberg",
  "workbench.startupEditor": "newUntitledFile",
  "mjml.autoPreview": true,
  "mjml.beautifyHtmlOutput": true,
  "mjml.templateGallery": true,
  "editor.hover.enabled": true,
  "explorer.autoReveal": false,
  "workbench.activityBar.visible": true,
  "mjml.minifyHtmlOutput": false,
  "editor.parameterHints.enabled": false,
  "editor.suggestSelection": "first",
  "workbench.colorCustomizations": {
    "editorError.border": "#fff0",
    "editorError.foreground": "#fff0",
    "editorWarning.border": "#fff0",
    "editorWarning.foreground": "#fff0"
  },
  "errorLens.errorBackground": "#fffo",
  "errorLens.warningBackground": "#fffo",
  "errorLens.fontStyleItalic": true,
  "errorLens.gutterIconsEnabled": true,
  "files.eol": "\n",
  "python.jediEnabled": false,
  "editor.fontWeight": "500", // formatting only supports LF line endings
  "vim.easymotion": true,
  "vim.sneak": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.insertModeKeyBindings": [
    {
      "before": [
        "j",
        "j"
      ],
      "after": [
        "<Esc>"
      ]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [
        "<leader>",
        "d"
      ],
      "after": [
        "d",
        "d"
      ]
    },
    {
      "before": [
        "<C-n>"
      ],
      "commands": [
        ":nohl"
      ]
    }
  ],
  "vim.leader": "<space>",
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false
  },
  "terminal.integrated.scrollback": 10000,
  "terminal.external.osxExec": "Kitty.app"
}
