{
  // ----------
  // General
  // ----------
  "workbench.iconTheme": "Monokai Pro (Filter Ristretto) Icons",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.colorTheme": "FireFly Pro Midnight",
  "workbench.activityBar.visible": true,
  "telemetry.enableCrashReporter": false,
  "telemetry.enableTelemetry": false,
  "editor.minimap.renderCharacters": false,
  "editor.minimap.enabled": false,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.fontFamily": "OperatorMonoLig Nerd Font",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.cursorStyle": "block",
  "editor.cursorSurroundingLines": 3,
  "editor.dragAndDrop": false,
  "editor.hover.enabled": false,
  "editor.parameterHints.enabled": false,
  "editor.roundedSelection": false,
  "extensions.ignoreRecommendations": true,
  "extensions.showRecommendationsOnlyOnDemand": true,
  "breadcrumbs.enabled": false,
  "window.zoomLevel": 0,
  "files.insertFinalNewline": true,
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontFamily": "OperatorMonoLig Nerd Font",
  "terminal.integrated.scrollback": 10000,
  // ----------
  // File Extensions
  // ----------
  "files.associations": {
    "*.plush.html": "erb"
  },
  // Other extensions
  "errorLens.fontStyleItalic": true,
  "errorLens.gutterIconsEnabled": true,
  "multiCommand.commands": [
    {
      "command": "multiCommand.makeRoom",
      "sequence": [
        "workbench.action.toggleSidebarVisibility",
        "workbench.action.toggleActivityBarVisibility"
      ]
    }
  ],
  // ----------
  // Git
  // ----------
  "git.autofetch": true,
  "gitlens.codeLens.enabled": false,
  "gitlens.statusBar.enabled": false,
  "gitlens.advanced.telemetry.enabled": false,
  // ----------
  // SQL
  // ----------
  "sqltools.telemetry": false,
  "sqltools.connections": [
    {
      "connectString": "postgres://postgres:postgres@localhost:5432/reflector_development",
      "dialect": "PostgreSQL",
      "name": "reflector_development"
    }
  ],
  // ----------
  // HTML
  // ----------
  "[html]": {
    "editor.formatOnSave": false
  },
  "emmet.includeLanguages": {
    "erb": "erb",
    "html": "html"
  },
  // ----------
  // VIM
  // ----------
  "vim.easymotion": true,
  "vim.easymotionMarkerYOffset": 0,
  "vim.easymotionMarkerFontFamily": "Menlo",
  "vim.easymotionMarkerFontSize": "12",
  "vim.sneak": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": false,
  "vim.insertModeKeyBindings": [
    {
      "before": [
        "j",
        "j"
      ],
      "after": [
        "<Esc>"
      ]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [
        "<leader>",
        "t"
      ],
      "commands": [
        "workbench.action.toggleSidebarVisibility"
      ]
    },
    {
      "before": [
        "<leader>",
        "f"
      ],
      "commands": [
        "revealInExplorer"
      ],
    },
    {
      "before": [
        "<leader>",
        "r",
        "f"
      ],
      "commands": [
        "fileutils.renameFile"
      ]
    }
  ],
  "vim.leader": ",",
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false,
    "<C-e>": false,
    "<C-g>": false
  },
  // ----------
  // Go
  // ----------
  "go.formatTool": "goimports",
  "go.lintTool": "golangci-lint",
  "go.autocompleteUnimportedPackages": true,
  "go.useLanguageServer": true,
  "[go]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    }
  },
  "[go.mod]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true,
    },
  },
  "gopls": {
    // Add parameter placeholders when completing a function.
    "usePlaceholders": true,
    // If true, enable additional analyses with staticcheck.
    // Warning: This will significantly increase memory usage.
    "staticcheck": false,
  },
  // ----------
  // Rust
  // ----------
  "rust-analyzer.highlightingOn": true,
  "rust-analyzer": {
    "highlightingOn": true,
    "inlayHints": {
      "typeHints": true,
      "chainedHints": true,
      "parameterHints": true,
    }
  },
  "rust-analyzer.cargo-watch.enable": true,
  "rust-analyzer.cargo-watch.command": "clippy",
  "rust-analyzer.rainbowHighlightingOn": true
}
